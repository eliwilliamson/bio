@import '_fonts'
@import '_settings'

normalize-css()
base()

body
  background-color $black
  height 100%
  font-size 2em

  @media (max-width: 720px)
    font-size 1.2em

  .centered
    padding 10%
    position relative
    z-index 5

    @media (max-width: 720px)
      padding 5%

  h1, h2, h3
    font-weight normal

  h1, h2, .salutation
    font-family $leituranews-italic-bold

  h1, .salutation
    font-size 10rem
    margin 0

    @media (max-width: 720px)
      font-size 6.5rem

  h1
    @media (max-width: 720px)
      margin-top 4rem

  h2
    font-size .8rem
    margin -2.5rem 0 5rem .2rem

    @media (max-width: 720px)
      margin-top -1.8rem

  h2, h3
    color darken(white, 30)

  h3
    font-size

  .strikeout
    text-decoration: line-through;
    color darken(white, 70)

  strong, .accent
    color $highlight-color

  a
    color white
    font-family $leituranews-italic
    text-decoration none
    transition color 100ms linear

    &:hover
      color $highlight-color

  .salutation
    @media (max-width: 480px)
      font-size 4rem

    .accent
      margin-left -3.2rem

      @media (max-width: 720px)
        margin-left -2.08rem

      @media (max-width: 480px)
        margin-left -1.28rem

.gradient-overlay
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  background -moz-linear-gradient(top,  rgba(34,34,34,0) 0%, rgba(34,34,34,1) 85%, rgba(34,34,34,1) 100%) /* FF3.6-15 */
  background -webkit-linear-gradient(top,  rgba(34,34,34,0) 0%,rgba(34,34,34,1) 85%,rgba(34,34,34,1) 100%) /* Chrome10-25,Safari5.1-6 */
  background linear-gradient(to bottom,  rgba(34,34,34,0) 0%,rgba(34,34,34,1) 85%,rgba(34,34,34,1) 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */


// PARTICLES STYLES

#particles
  position absolute
  overflow hidden
  height 100%
  top 0
  left 0
  width 100%

  @media (max-width: 480px)
    opacity 0.5

  canvas
    position absolute
    top 0

  .container
    position relative
    z-index 3

